<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="3.3" type="template" client="site" method="upgrade">
	
	<name>nuntius</name><!-- name the template -->
	<creationDate>2015-04-23</creationDate><!-- the date your are beginn to code -->
	<author>Peter van Sark</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© Nuntius B.V. Nuntius.nl</copyright><!-- for who you are coding -->
	<authorEmail>info@nuntius.nl</authorEmail><!-- your email address -->
	<authorUrl>http://www.nuntius.nl</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>Nuntius Template</h1>
		<p>Created by <a href="http://www.nuntius.nl" target="_blank">Nuntius B.V. | www.nuntius.nl</a>.</p>
		<p>Based on <a href="http://blank.vc/" target="_blank">Blank - Bootstrap Edition</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>runless.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions><!-- TODO define the positions for modules here -->
		<position>navbar</position>
		<position>breadcrumbs</position>
		<position>largebar</position>
		<position>sidebar</position>
		<position>debug</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="runless" type="radio" default="1" label="Run PHP Less Compiler" description="">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
